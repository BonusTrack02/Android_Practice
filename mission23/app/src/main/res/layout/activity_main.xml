<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolsLayout"
        android:padding="4dp"
        android:background="#ffffffff"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/colorButton"
            android:text="Color"
            android:drawableTop="@drawable/colorpalette"
            android:drawablePadding="2dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/penButton"
            android:drawableTop="@drawable/penpalette"
            android:drawablePadding="2dp"
            android:text=" Pen "
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eraserButton"
            android:text="Eraser"
            android:drawableTop="@drawable/eraser"
            android:drawablePadding="2dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/undoButton"
            android:drawableTop="@drawable/undo"
            android:drawablePadding="2dp"
            android:text="Undo"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/legendLayout"
            android:orientation="vertical"
            android:padding="4dp"
            android:background="#ffffffff"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/colorLegendButton"
                android:layout_weight="1"
                android:background="#ff000000"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/sizeLegendButton"
                android:layout_weight="1"
                android:background="#ffffffff"
                android:text="1"
                android:textSize="14sp"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"
        android:background="#ffffffff"
        >
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio01"
                android:layout_margin="4dp"
                android:text="BUTT"
                android:textSize="18sp"
                android:textColor="#ff000000"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio02"
                android:layout_margin="4dp"
                android:text="ROUND"
                android:textSize="18sp"
                android:textColor="#ff000000"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio03"
                android:layout_margin="4dp"
                android:text="SQUARE"
                android:textSize="18sp"
                android:textColor="#ff000000"
                />
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/boardLayout"
        android:orientation="horizontal"
        >
    </LinearLayout>
</LinearLayout>